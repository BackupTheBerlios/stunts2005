<!-- This is a car -->
<!-- the contol (ai/human) has to be defined externally -->
<car>

	<!-- of course the wheels are physically connected to the car body -->
	<wheels>
		<wheel isDriveWheel="true" isSteerable="true">
			<geometryName>FrontLeftWheel</geometryName>
			<friction>0.8</friction>
		</wheel>
		<wheel isDriveWheel="true" isSteerable="true">
			<geometryName>FrontRightWheel</geometryName>
			<friction>0.8</friction>
		</wheel>
		<wheel isDriveWheel="false" isSteerable="false">
			<geometryName>RearLeftWheel</geometryName>
			<friction>0.75</friction>
		</wheel>
		<wheel isDriveWheel="false" isSteerable="false">
			<geometryName>RearRightWheel</geometryName>
			<friction>0.75</friction>
		</wheel>
	</wheels>

	<gearbox>
		<!-- Andi's BMW -->
		<numberOfGears>6</numberOfGears>
		<carRatio>3.64</carRatio>
		<ratio1>4.23</ratio1>
		<ratio2>2.53</ratio2>
		<ratio3>1.67</ratio3>
		<ratio4>1.23</ratio4>
		<ratio5>1.00</ratio5>
		<ratio6>0.83</ratio6>
		<ratioR>3.75</ratioR>
	</gearbox>

	<motorPower>120</motorPower>
	<brakePower>200</brakePower>

	<!-- positions are relative to the car, y=0 on the wheels -->
	<mass posX="-0.1" posY="0.4" posZ="0.5">1350</mass>
	<friction>0.4</friction>

	<sounds>
		<sound type="carRPMdependent">CarMotorAccel1.ogg</sound>
		<sound type="carSpeedDependent">CarWheelNoise1.ogg</sound>
		<sound event="horn">CarHorn1.ogg</sound>
		<sound type="loop" posZ="-0.5">CarGasPump.ogg</sound>
		<sound event="accelerate" posY="-0.2" posZ="0.4">CarTurboCharger.ogg</sound>
		<sound event="brake" posY="-0.2" posZ="0.4">CarSqueel.ogg</sound>
	</sounds>

	<geometry>
		<file>mustang.mesh</file>
		<stretch x="20.8" y="20.8" z="20.8"/>
	</geometry>

	<particles>
		<particle type="carRPMdependent">
			<name>smoke.particle</name>
			<density>1.0</density>
			<posX>-0.4</posX>
			<posY>+0.2</posY>
			<posZ>-1.3</posZ>
		</particle>
	</particles>

	<events>
		<event>
			<name>accelerate</name>
			<!--this event does nothing but is needed for the turbo charger sound-->
		</event>
		<event>
			<name>brake</name>
			<!-- only do the sound if brake hard -->
			<!--this event does nothing but is needed for the turbo charger sound-->
		</event>
		<event>
			<name>horn</name>
			<!--this event does nothing but is needed for the horn sound-->
		</event>
		<event>
			<name>collision</name>
			<action argument="0.01 * speed">MotorDamage</action>
		</event>
	</events>
</car>
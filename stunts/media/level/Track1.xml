<!-- this is a track -->

<track>
	<gridsize x="30" z="30" />
	
	<objects>
		<object type="base">
			<!-- syk jump -->
			<friction>0.9</friction>

			<!-- Set the position of the mass point relative to objects position -->
			<!-- inf represents infimum, other valueas represents the masses -->
			<mass relX="0" relY="0" relZ="0" value="inf" />
	
			<!-- Rotate the object on the 0-1-0 Axis with x degrees
				You can also define units: quarters or degrees.
				If quarters specified, so rotate n 90degree step. If nothing
				specified or something else, degree will be used -->
			<rotate x="0" y="1" z="0" unit="quarters" value="1" />
			
			<!-- the track objects are places in grid units -->
			<!-- if the unit isn't set, its default is meters-->
			<!-- if a position has a bottom type, it's on the terrain's ground -->
			<posX unit="gridUnits">0</posX>
			<posY unit="gridUnits" type="bottom">0</posY>
			<posZ unit="gridUnits">1</posZ>
	
			<geometry>
				<file>corner_big.mesh</file>
				
				<!-- Proportion property of the geometry object. Proportions are needed
					to scale the objects on the grid size.
						- axis defines the axis which will be used for proportion calculation
						- size defines the new size of the object along the axis
						- [units] defines the units of the size value. Accept only gridUnits. if nothing defined meters are used--> 
				<proportion axis="x" size="1" units="gridUnits" /> 
				
				<!-- Scale the object. The scaling will be done if this tag presents. The scaling is done relatively,
				      so if you define proportion like above the scaling will affect to the new size -->
				<!-- <stretch x="0.9" y="0.9" z="0.9" /> -->
			</geometry>
	
			<!-- waypoints can be set as invisible objects in 3d studio -->
			<!-- names like "wpbegin" are the names of the 3ds objects -->
			<waypoints>
				<waypoint index="0">wpbegin</waypoint>
				<waypoint index="1">wp1</waypoint>
				<waypoint index="2">wp2</waypoint>
				<waypoint index="3">wplast</waypoint>
			</waypoints>
		</object>
		
		<object type="base">
			<friction>0.9</friction>
			<mass relX="0" relY="0" relZ="0" value="inf" />
	
			<rotate x="0" y="1" z="0" unit="quarters" value="1" />
			<posX unit="gridUnits">1</posX>
			<posY unit="gridUnits" type="bottom">0</posY>
			<posZ unit="gridUnits">1</posZ>
	
			<geometry>
				<file>crossover.mesh</file>
				<proportion axis="x" size="1" units="gridUnits" /> 
				<stretch x="0.7" y="0.7" z="0.7" />
			</geometry>
		</object>
		
		<object type="base">
			<friction>0.9</friction>
			<mass relX="0" relY="0" relZ="0" value="inf" />
	
			<rotate x="0" y="1" z="0" unit="quarters" value="2" />
			<posX unit="gridUnits">2</posX>
			<posY unit="gridUnits" type="bottom">0</posY>
			<posZ unit="gridUnits">1</posZ>
	
			<geometry>
				<file>corner_big.mesh</file>
				<proportion axis="x" size="1" units="gridUnits" /> 
			</geometry>
		</object>
	
		<object type="base">
			<friction>0.9</friction>
			<mass relX="0" relY="0" relZ="0" value="inf" />
	
			<rotate x="0" y="1" z="0" unit="quarters" value="3" />
			<posX unit="gridUnits">1</posX>
			<posY unit="gridUnits" type="bottom">0</posY>
			<posZ unit="gridUnits">0</posZ>
	
			<geometry>
				<file>corner_bridge_big.mesh</file>
				<proportion axis="x" size="1" units="gridUnits" /> 
			</geometry>
		</object>
		
		<object type="base">
			<!-- syk jump2 -->
			<friction>0.9</friction>
			<mass relX="1" relY="0" relZ="0" value="inf" />
	
			<rotate x="0" y="1" z="0" unit="quarters" value="0" />

			<!-- the track objects are places in grid units -->
			<!-- if the unit isn't set, its default is meters-->
			<!-- if a position has a bottom type, it's on the terrain's ground -->
			<posX unit="gridUnits">0</posX>
			<posY unit="gridUnits" type="bottom">0</posY>
			<posZ unit="gridUnits">0</posZ>
	
			<geometry>
				<file>crossover.mesh</file>
				<proportion axis="x" size="1" units="gridUnits" /> 
			</geometry>
	
			<!-- waypoints can be set as invisible objects in 3d studio -->
			<!-- names like "wpbegin" are the names of the 3ds objects -->
			<waypoints>
				<waypoint index="0">wpbegin</waypoint>
				<waypoint index="1">wp1</waypoint>
				<waypoint index="2">wp2</waypoint>
				<waypoint index="3">wplast</waypoint>
			</waypoints>
		</object>
	</objects>
</track>
<!-- this is a track -->

<track>
	<gridsize x="40" z="40" />
	
	<objects>
		<object type="base">
			<!-- syk jump -->
			<friction>0.9</friction>
			<mass posX="0" posY="0" posZ="0">#inf</mass>
	
			<rotX>0</rotX>
			<rotY unit="quarters">1</rotY>
			<rotZ>0</rotZ>
	
			<!-- the track objects are places in grid units -->
			<!-- if the unit isn't set, its default is meters-->
			<!-- if a position has a bottom type, it's on the terrain's ground -->
			<posX unit="gridUnits">5</posX>
			<posY>30</posY>
			<posZ unit="gridUnits">6</posZ>
	
			<geometry>
				<file>corner_big.mesh</file>
				<stretch x="0.9" y="0.9" z="0.9" />
			</geometry>
	
			<!-- waypoints can be set as invisible objects in 3d studio -->
			<!-- names like "wpbegin" are the names of the 3ds objects -->
			<waypoints>
				<waypoint index="0">wpbegin</waypoint>
				<waypoint index="1">wp1</waypoint>
				<waypoint index="2">wp2</waypoint>
				<waypoint index="3">wplast</waypoint>
			</waypoints>
		</object>
	
		<object type="base">
			<!-- syk jump2 -->
			<friction>0.9</friction>
			<mass posX="1" posY="0" posZ="0">#inf</mass>
	
			<rotX>0</rotX>
			<rotY unit="degrees">90</rotY>
			<rotZ>0</rotZ>
	
			<!-- the track objects are places in grid units -->
			<!-- if the unit isn't set, its default is meters-->
			<!-- if a position has a bottom type, it's on the terrain's ground -->
			<posX unit="gridUnits">10</posX>
			<posY unit="gridUnits" type="bottom">0</posY>
			<posZ unit="gridUnits">0</posZ>
	
			<geometry>
				<file>corner_bridge_big.mesh</file>
				<stretch x="0.9" y="0.9" z="0.9" />
			</geometry>
	
			<!-- waypoints can be set as invisible objects in 3d studio -->
			<!-- names like "wpbegin" are the names of the 3ds objects -->
			<waypoints>
				<waypoint index="0">wpbegin</waypoint>
				<waypoint index="1">wp1</waypoint>
				<waypoint index="2">wp2</waypoint>
				<waypoint index="3">wplast</waypoint>
			</waypoints>
		</object>
	</objects>
</track>